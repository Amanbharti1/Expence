<div class="container mt-3">

<div class="row">
  <div class="col-7">
<%= link_to "New expense", new_expense_path ,class:"btn btn-secondary mb-5" %>

<div class="btn-group mb-5 ms-2" role="group" aria-label="Basic mixed styles example">
  <%= link_to "All", expenses_path, class: "btn btn-danger", remote: true %>
  <%= link_to "Repairs", category_expenses_path(7), class: "btn btn-warning", remote: true %>
  <%= link_to "Shopping", category_expenses_path(8), class: "btn btn-success", remote: true %>
  <%= link_to "Bills", category_expenses_path(9), class: "btn btn-info", remote: true %>
  <%= link_to "Taxes", category_expenses_path(10), class: "btn btn-primary", remote: true %>
</div>


</div>

<div class="col-5">

<div class=" d-md-flex justify-content-md-end ">
 <% sum = 0%>
 <% @expenses.each do |e| %>
 <% sum+=e.amount %>
 <% end %>

 <h3>Total: $<%=sum%></h3>
</div>
</div>
</div>



<div id="expenses" class="row">
  <% if !@expenses.blank?%>
  <%= render @expenses %>
  <% else %>
  <h1>NO EXPENCES AVAILABLE</h1>
  <% end%>
</div>

<div class="pagination">
  <ul class="pagination">
  <li class:"page-item"><%= paginate @expenses%></li>
  </ul>
</div>


</div>

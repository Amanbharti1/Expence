<p style="color: green"><%= notice %></p>

<div class="container">
<div class="row mt-5">
<div class="col-6">
<div class="card mb-3" style="max-width: 600px;">
<div class="row g-0">
  <div class="col-md-4">
  <% if @expense.receipt.attached? %>
  <%= image_tag @expense.receipt,class:"img-fluid" size: "200x200" %>
<% else %>
  No receipt uploaded.
<% end %>
  </div>
  <div class="col-md-8">
    <div class="card-body">
      <h4 class="card-title"><%=@expense.title%></h4>
      <p class="card-text"> Description : <%=@expense.description%></p>
      <p class="card-text"> $<%=@expense.amount%></p>
      <p class="card-text"><small class="text-muted"><%=@expense.date%></small></p>
    </div>
  </div>
</div>
</div>
  
<div class="mb-3 d-flex">
  <%= link_to "Edit this expense", edit_expense_path(@expense) ,class:"btn btn-primary mb-3 me-2" %> 
  <%= button_to "Destroy this expense", @expense, method: :delete ,class:"btn btn-danger" %>
<%= link_to "Back to expenses", expenses_path ,class:"btn btn-warning mb-3 ms-2" %>

  
</div>
</div>
<div class='col-6'>
<p>
  <h4>Receipt</h4>  
  <% if @expense.receipt.attached? %>
    <%= image_tag @expense.receipt, size: "500x500" %>
  <% else %>
    No receipt uploaded.
  <% end %>
</p>
</div>
</div>
</div>